# ===========================================
# Book A Ride - Environment Configuration
# ===========================================
# Copy to .env and fill in your values: cp env.example .env

# --- Database ---
MONGO_URL=mongodb://localhost:27017
DB_NAME=bookaride

# --- Email: Google Workspace (recommended) ---
# Use Google Workspace SMTP for sending transactional emails
EMAIL_PROVIDER=google_workspace
SMTP_USER=noreply@bookaride.co.nz
SMTP_PASS=your-google-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Sender address (should match your Google Workspace email or alias)
SENDER_EMAIL=noreply@bookaride.co.nz
NOREPLY_EMAIL=noreply@bookaride.co.nz

# --- Email: Mailgun (alternative) ---
# Uncomment to use Mailgun instead of Google Workspace
# EMAIL_PROVIDER=mailgun
# MAILGUN_API_KEY=key-xxxxxxxxxxxx
# MAILGUN_DOMAIN=mg.bookaride.co.nz

# --- Admin ---
ADMIN_EMAIL=bookings@bookaride.co.nz
JWT_SECRET_KEY=your-secret-key-change-in-production

# --- Public URLs ---
PUBLIC_DOMAIN=https://bookaride.co.nz
BACKEND_URL=https://api.bookaride.co.nz

# --- SMS (Twilio) ---
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# --- Payments ---
# STRIPE_API_KEY=
# STRIPE_WEBHOOK_SECRET=

# --- Google Maps ---
# GOOGLE_MAPS_API_KEY=

# --- Cron / Internal ---
CRON_API_KEY=bookaride-cron-secret-2024
